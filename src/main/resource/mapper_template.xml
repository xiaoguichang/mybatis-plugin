<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="@daoClassFullName">
    <resultMap id="baseResultMap" type="@entityFullName">
        <result property="privilegeId" column="privilege_id"/>
        <result property="privilegeName" column="privilege_name"/>
        <result property="privilegeType" column="privilege_type"/>
        <result property="parentPrivilegeId" column="parent_privilege_id"/>
        <result property="privilegeEntity" column="privilege_entity"/>
        <result property="createTime" column="create_time"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="whereCondition">
      @whereCondition
    </sql>

    <insert id="insert" parameterType="@entityFullClass" useGeneratedKeys="@useGeneratedKeys" keyProperty="@keyProperty">
        insert into @tableName(@insertFieldClause)
          values(@insertPropertiesClause);
    </insert>

    <update id="update" parameterType="@entityFullClass">
        update @tableName
        set @updateSetClause
        where @primaryKeyWhereClause;
    </update>

    <select id="selectById" parameterType="" resultMap="baseResultMap">
        select @selectFiledClause
        from @tableName
        where @primaryKeyWhereClause;
    </select>

    <select id="selectListByMap" resultMap="baseResultMap" parameterType="map">
        select privilege_id , privilege_name , privilege_type , privilege_entity , parent_privilege_id , status , create_time
        from t_sys_privilege_info
        <include refid="selectWhereCondition"/>

        <if test="offset != null and size != null">
          limit #{offset} , #{size}
        </if>
    </select>

    <select id="selectListByMap_count" resultType="int" parameterType="map">
        select count(1) from @tableName
        <include refid="selectWhereCondition"/>
    </select>


</mapper>